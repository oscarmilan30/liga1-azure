{
	"name": "pl_delete_controlado",
	"properties": {
		"activities": [
			{
				"name": "chk_folder_exists",
				"type": "GetMetadata",
				"dependsOn": [],
				"policy": {
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "ds_adls_parquet",
						"type": "DatasetReference",
						"parameters": {
							"folderPath": {
								"value": "@concat(pipeline().parameters.capa_raw, trim(pipeline().parameters.rutaBase), '/', pipeline().parameters.nombre_archivo, '/', if(equals(pipeline().parameters.ModoEjecucion,'HISTORICO'),'1FL/data', if(equals(pipeline().parameters.ModoEjecucion,'REPROCESO'), concat(string(pipeline().parameters.anio), '/01/01/data'), concat(formatDateTime(pipeline().parameters.FechaCarga,'yyyy/MM/dd'), '/data'))))",
								"type": "Expression"
							},
							"filesystem": {
								"value": "@pipeline().parameters.filesystem",
								"type": "Expression"
							},
							"fileName": "@''"
						}
					},
					"fieldList": [
						"exists",
						"childItems"
					],
					"storeSettings": {
						"type": "AzureBlobFSReadSettings",
						"recursive": true
					},
					"formatSettings": {
						"type": "ParquetReadSettings"
					}
				}
			},
			{
				"name": "IfConditionDelete",
				"type": "IfCondition",
				"dependsOn": [
					{
						"activity": "chk_folder_exists",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@and(not(equals(pipeline().parameters.ModoEjecucion,'HISTORICO')), activity('chk_folder_exists').output.exists)",
						"type": "Expression"
					},
					"ifTrueActivities": [
						{
							"name": "CleanRawFolder",
							"type": "Delete",
							"dependsOn": [],
							"policy": {
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"dataset": {
									"referenceName": "ds_adls_parquet",
									"type": "DatasetReference",
									"parameters": {
										"folderPath": {
											"value": "@concat(pipeline().parameters.capa_raw, trim(pipeline().parameters.rutaBase), '/', pipeline().parameters.nombre_archivo, '/', if(equals(pipeline().parameters.ModoEjecucion,'REPROCESO'), concat(string(pipeline().parameters.anio), '/01/01/data'), concat(formatDateTime(pipeline().parameters.FechaCarga,'yyyy/MM/dd'), '/data')))",
											"type": "Expression"
										},
										"filesystem": {
											"value": "@pipeline().parameters.filesystem",
											"type": "Expression"
										},
										"fileName": {
											"value": "@concat(pipeline().parameters.nombre_archivo, '.parquet')",
											"type": "Expression"
										}
									}
								},
								"logStorageSettings": {
									"linkedServiceName": {
										"referenceName": "ls_adls",
										"type": "LinkedServiceReference"
									},
									"path": "liga1"
								},
								"enableLogging": true,
								"storeSettings": {
									"type": "AzureBlobFSReadSettings",
									"recursive": true
								}
							}
						}
					]
				}
			}
		],
		"parameters": {
			"capa_raw": {
				"type": "string"
			},
			"rutaBase": {
				"type": "string"
			},
			"nombre_archivo": {
				"type": "string"
			},
			"filesystem": {
				"type": "string"
			},
			"FechaCarga": {
				"type": "string"
			},
			"ModoEjecucion": {
				"type": "string"
			},
			"anio": {
				"type": "string"
			}
		},
		"folder": {
			"name": "pl_pipeline_control"
		},
		"annotations": []
	}
}