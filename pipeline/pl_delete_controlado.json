{
	"name": "pl_delete_controlado",
	"properties": {
		"activities": [
			{
				"name": "IfConditionDelete",
				"type": "IfCondition",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@not(equals(pipeline().parameters.ModoEjecucion,'HISTORICO'))",
						"type": "Expression"
					},
					"ifTrueActivities": [
						{
							"name": "CleanRawYearFolder",
							"type": "Delete",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"dataset": {
									"referenceName": "ds_adls_parquet",
									"type": "DatasetReference",
									"parameters": {
										"folderPath": {
											"value": "@concat(pipeline().parameters.capa_raw, trim(pipeline().parameters.rutaBase), '/', pipeline().parameters.nombre_archivo, '/', pipeline().parameters.FechaCarga, '/data')",
											"type": "Expression"
										},
										"filesystem": {
											"value": "@pipeline().parameters.filesystem",
											"type": "Expression"
										},
										"fileName": {
											"value": "@concat(pipeline().parameters.nombre_archivo, '.parquet')",
											"type": "Expression"
										}
									}
								},
								"enableLogging": false,
								"storeSettings": {
									"type": "AzureBlobFSReadSettings",
									"recursive": true,
									"enablePartitionDiscovery": false
								}
							}
						}
					]
				}
			}
		],
		"parameters": {
			"capa_raw": {
				"type": "string"
			},
			"rutaBase": {
				"type": "string"
			},
			"nombre_archivo": {
				"type": "string"
			},
			"filesystem": {
				"type": "string"
			},
			"FechaCarga": {
				"type": "string"
			},
			"ModoEjecucion": {
				"type": "string"
			}
		},
		"annotations": []
	}
}