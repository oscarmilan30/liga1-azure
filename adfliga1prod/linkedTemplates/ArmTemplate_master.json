{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Nombre de instancia de Data Factory",
			"defaultValue": "adfliga1prod"
		},
		"ls_adls_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://staliga1peruadls.dfs.core.windows.net/"
		},
		"ls_azure_keyvault_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://kv-liga1-secreto.vault.azure.net/"
		},
		"ls_databricks_properties_typeProperties_existingClusterId": {
			"type": "string",
			"defaultValue": "@linkedService().CLUSTER_ID"
		},
		"ls_sql_liga1_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "serverliga1futbol.database.windows.net"
		},
		"ls_sql_liga1_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "ligafutbol"
		},
		"ls_sql_liga1_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "adminliga"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI de la cuenta de almacenamiento que contiene las plantillas de ARM vinculadas."
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Token de SAS para la cuenta de almacenamiento que contiene las plantillas de ARM vinculadas"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "adfliga1prod_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ls_azure_keyvault_properties_typeProperties_baseUrl": {
						"value": "[parameters('ls_azure_keyvault_properties_typeProperties_baseUrl')]"
					},
					"ls_adls_properties_typeProperties_url": {
						"value": "[parameters('ls_adls_properties_typeProperties_url')]"
					},
					"ls_databricks_properties_typeProperties_existingClusterId": {
						"value": "[parameters('ls_databricks_properties_typeProperties_existingClusterId')]"
					},
					"ls_sql_liga1_properties_typeProperties_server": {
						"value": "[parameters('ls_sql_liga1_properties_typeProperties_server')]"
					},
					"ls_sql_liga1_properties_typeProperties_database": {
						"value": "[parameters('ls_sql_liga1_properties_typeProperties_database')]"
					},
					"ls_sql_liga1_properties_typeProperties_userName": {
						"value": "[parameters('ls_sql_liga1_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "adfliga1prod_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'adfliga1prod_ArmTemplate_0')]"
			]
		}
	]
}